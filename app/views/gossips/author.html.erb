<h2>Liste des potins</h2>
<div class="gossips row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
<% @user.gossips.each do |gossip| %>
    <div class="col">
        <a class="card text-decoration-none" href="<%= url_for(:controller => "gossips", :action => "show", :id => gossip.id, :only_path => true) %>">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                <p><%= gossip.title %></p>
                <footer class="blockquote-footer"><%= gossip.user.first_name %> <%= gossip.user.last_name[0] %>.</footer>
                </blockquote>
            </div>
        </a>
    </div>
<% end %>
</div>
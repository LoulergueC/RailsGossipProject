<% if @gossip.errors.any? %>
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Un probl√®me est survenu !</h4>
        <p>Nous n'avons pas pu modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
            <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<h1>Une petite modification ?</h1>

<%= form_for @gossip do |f| %>
    <div class="mb-3">
        <%= f.label :title, "Titre", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= f.label :content, "Contenu", class: "form-label" %>
        <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="mb-3 tags">
            <% Tag.all.each do |tag| %>
                <input type="checkbox" name="tags[]" value="<%= tag.id %>" id="<%= tag.title %>" <%= if @gossip.tags.include?(tag) then "checked" end %>/>
                <label for="<%= tag.title %>" class="tag tag-<%= tag.id %>"><%= tag.title %></label>
            <% end %>
        </div>
    <%= f.submit "Modifier le potin", class: "btn btn-primary" %>
<% end %>
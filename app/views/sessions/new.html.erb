<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "alert alert-#{name == :success ? 'success' : 'danger'}" %>
<% end %>

<div class="my-5">
<%= form_tag url_for(action: :create), method: "post" do %>
    <div class="form-group">
        <%= label_tag :email, nil, class: "form-label" %>
        <%= text_field :email, nil, class: "form-control" %>
    </div>
    <div class="form-group mt-2">
        <%= label_tag :password, nil, class: "form-label" %>
        <%= password_field :password, nil, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= submit_tag "Log in", class: "btn btn-primary w-100 mt-3" %>
    </div>
<% end %>
</div>

<div class="text-center">
    <%= link_to "Pas de compte ? S'enregistrer", new_user_path, class: "link link-secondary" %>
</div>